{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "include": ["src", "declarations.d.ts"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@context/*": ["context/*"],
      "@design/*": ["design/*"],
      "@flows/*": ["flows/*"],
      "@navigation/*": ["navigation/*"],
      "@redux/*": ["redux/*"],
      "@theme/*": ["theme/*"],
      "@translations/*": ["translations/*"],
      "@utils/*": ["utils/*"],
    }
  }
}
